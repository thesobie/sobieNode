# SOBIE Conference Platform - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb+srv://username:password@cluster0.taug6.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
DB_NAME=sobienode

# =============================================================================
# COMMUNICATION SAFETY CONFIGURATION (Development/Test Only)
# =============================================================================
TEST_USER_EMAIL=your-test-email@gmail.com
SEND_TO_TEST_EMAIL=false
BLOCK_ALL_SMS=true
BLOCK_ALL_PUSH_NOTIFICATIONS=true
LOG_COMMUNICATION_ATTEMPTS=true
EMAIL_SERVICE_ENABLED=false

# =============================================================================
# JWT AUTHENTICATION (REQUIRED)
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED for magic links, verification, etc.)
# =============================================================================
# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sobie.org

# =============================================================================
# SMS CONFIGURATION (Optional - for magic link SMS)
# =============================================================================
# Twilio Configuration (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Cookie configuration
COOKIE_DOMAIN=localhost

# Account lockout settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=2h

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Content moderation sensitivity (low, medium, high)
CONTENT_MODERATION_LEVEL=medium

# Email templates branding
PLATFORM_NAME="SOBIE Conference Platform"
SUPPORT_EMAIL=support@sobie.org

# Test Configuration
TEST_EMAIL=your-test-email@gmail.com

# =============================================================================
# QUICK SETUP GUIDE
# =============================================================================
# 1. REQUIRED for authentication to work:
#    - Generate JWT secrets (see commands above)
#    - Configure email SMTP settings
#    - Set up your MongoDB connection
#
# 2. Generate secure secrets:
#    node -e "console.log('JWT_SECRET=' + require('crypto').randomBytes(64).toString('hex'))"
#    node -e "console.log('JWT_REFRESH_SECRET=' + require('crypto').randomBytes(64).toString('hex'))"
#
# 3. Gmail setup:
#    - Enable 2FA on your Gmail account
#    - Generate an "App Password" for SMTP_PASS
#    - Use your Gmail address for SMTP_USER
#
# 4. Optional SMS setup:
#    - Sign up for Twilio account
#    - Get Account SID, Auth Token, and Phone Number
#    - Users can then request magic links via SMS
